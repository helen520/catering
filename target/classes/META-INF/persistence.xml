<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="acme" transaction-type="RESOURCE_LOCAL">
		<class>helen.catering.model.entities.Coupon</class>
		<class>helen.catering.model.entities.CouponTemplate</class>
		<class>helen.catering.model.entities.Department</class>
		<class>helen.catering.model.entities.Desk</class>
		<class>helen.catering.model.entities.DiscountRule</class>
		<class>helen.catering.model.entities.Dish</class>
		<class>helen.catering.model.entities.DishCategory</class>
		<class>helen.catering.model.entities.DishOrder</class>
		<class>helen.catering.model.entities.DishTag</class>
		<class>helen.catering.model.entities.DishUnit</class>
		<class>helen.catering.model.entities.MemberPolicy</class>
		<class>helen.catering.model.entities.NamedValue</class>
		<class>helen.catering.model.entities.UserAccount</class>
		<class>helen.catering.model.entities.OperationLog</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create-drop" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.transaction.flush_before_completion"
				value="true" />
			<property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
		</properties>
	</persistence-unit>

</persistence>